#0 思考了很久，最终还是没成功（错误的）
class Solution:
    def decodeString(self, s):
        """
        :type s: str
        :rtype: str
        """
        if not s:
            return s
        stack = []
        while not s.isalpha():
            if not stack:
                i = l = s.index('[')
            if s[i] == '[':
                stack.append('[')
            if s[i] == ']':
                stack.pop()
            if not stack:
                s = s[:l-1] + int(s[l-1]) * s[l+1:i] + s[i+1:]
            i += 1
            
        return s
#1 太牛逼了，思路跟我的一样，只是我还差几步
class Solution:
    def decodeString(self, s):
        """
        :type s: str
        :rtype: str
        """
        stack = []
        stack.append(["", 1])
        num = ""
        for ch in s:
            if ch.isdigit():
              num += ch
            elif ch == '[':
                stack.append(["", int(num)])
                num = ""
            elif ch == ']':
                st, k = stack.pop()
                stack[-1][0] += st*k
            else:
                stack[-1][0] += ch
        return stack[0][0]
